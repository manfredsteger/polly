# KITA Poll - Environment Variables Template
# Copy this file to .env and fill in your values

# ============================================
# REQUIRED
# ============================================

# PostgreSQL Database URL
DATABASE_URL=postgresql://kitapoll:your_password@localhost:5432/kitapoll

# Session secret (minimum 32 characters, use a random string)
SESSION_SECRET=change-this-to-a-secure-random-string-at-least-32-chars

# ============================================
# APPLICATION URLs
# ============================================

# Public URL of your application
APP_URL=http://localhost:5000
VITE_APP_URL=http://localhost:5000

# ============================================
# EMAIL (SMTP) - Optional
# ============================================

# SMTP Server Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password

# From address for outgoing emails
EMAIL_FROM=noreply@yourdomain.com

# ============================================
# KEYCLOAK OIDC - Optional
# ============================================

# Enable enterprise SSO with Keycloak
KEYCLOAK_REALM=your-realm
KEYCLOAK_CLIENT_ID=kita-poll
KEYCLOAK_CLIENT_SECRET=your-client-secret
KEYCLOAK_AUTH_SERVER_URL=https://keycloak.example.com

# ============================================
# DOCKER COMPOSE ONLY
# ============================================

# PostgreSQL credentials (only used by docker-compose)
POSTGRES_USER=kitapoll
POSTGRES_PASSWORD=kitapoll_secret
POSTGRES_DB=kitapoll

# Seed demo data on first start (true/false)
SEED_DEMO_DATA=false

# ============================================
# ADVANCED
# ============================================

# Node environment (development, production)
NODE_ENV=production

# Port (default: 5000)
PORT=5000
